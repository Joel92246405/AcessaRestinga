<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative">

        <ImageView
        android:id="@+id/imageView"
        android:layout_width="102dp"
        android:layout_height="88dp"

        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_prefeitura"
        android:contentDescription="TODO" />


        <ImageView
            android:id="@+id/efetuarLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="entrar"
            android:src="@mipmap/ic_login"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="45dp">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:id="@+id/txtLogin"
            android:layout_marginTop="60dp"
            android:text="ENTRAR"
            android:textColor="@color/black"
            ></TextView>
        <ImageView
            android:id="@+id/desconectar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:src="@mipmap/ic_logout"
            android:layout_marginTop="45dp"
            android:text="SAIR" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:id="@+id/txtdesconectar"
            android:layout_marginTop="60dp"
            android:text="SAIR"
            android:textColor="@color/black"
            ></TextView>
    </RelativeLayout>


    <TextView

        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:id="@+id/texttitulo"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="App de Utilidade PÃºblica"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por Joel Nascimento"
        android:layout_below="@+id/texttitulo"
        android:textColor="@color/black"/>


</RelativeLayout>