<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>

    <androidx.cardview.widget.CardView

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="40dp"
        card_view:cardCornerRadius="4dp"
        android:background="#D5D5D5">
        <ImageView
            android:id="@+id/verProd"
            android:layout_marginTop="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/nome_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="2dp"
            android:text="Nome"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             />

        <TextView
            android:id="@+id/valor_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:text="Valor"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />



        <ImageView
            android:id="@+id/incrementaItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_incrementar" />

        <TextView
            android:id="@+id/qtdItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="45dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="0"
            android:textSize="30dp"
            />

        <ImageView
            android:id="@+id/decrementaItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="105dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_decrementar" />

    </androidx.cardview.widget.CardView>





</RelativeLayout>