<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="10dp">


    <TextView
    android:id="@+id/eualugo_titulo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginLeft="30dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:text="Titulo"/>



    <TextView
        android:id="@+id/eualugo_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eualugo_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:text="Nome"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/eualugo_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eualugo_nome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:text="Endereço"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/eualugo_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eualugo_endereco"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:text="Telefone"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/linearLayoutEuAlugo"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/eualugo_endereco"

        android:layout_marginLeft="200dp"

        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/phone_eualugo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_phone">

        </ImageView>
        <ImageView
            android:id="@+id/zap_eualugo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_zap">


        </ImageView>

        <ImageView
            android:id="@+id/excluir_eualugo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/ic_apagar" />

    </LinearLayout>

    <TextView
        android:id="@+id/eualugo_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eualugo_telefone"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:text="Valor"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/eualugo_maisinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eualugo_valor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:text="Mais informações"
        android:textSize="15dp"
        android:textColor="@color/lite_blue"/>

    <TextView
        android:id="@+id/whatsapp_eualugo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eualugo_valor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:textColor="@color/lite_blue"
        android:visibility="invisible"/>


    <View
        android:id="@+id/view"
        android:layout_below="@+id/eualugo_maisinfo"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_height="1dp" />



</RelativeLayout>