<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        android:background="#D5D5D5">

        <TextView
            android:id="@+id/txtnomeestoudoando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="Nome"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txttelefoneestoudoando"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtnomeeualugo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="TELEFONE"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/conteudoestoudoando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:inputType="textMultiLine"
            android:text="ConteÃºdo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:id="@+id/ligarestoudoando"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:src="@mipmap/ic_phone" />

        <ImageView
            android:id="@+id/zapzapestoudoando"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="80dp"
            android:src="@mipmap/ic_zap" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:id="@+id/excluirestoudoando"
            android:src="@mipmap/ic_apagar" />

        <TextView
            android:id="@+id/whatsapp_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </androidx.cardview.widget.CardView>





</RelativeLayout>